<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grant"
    android:orientation="vertical"
    android:padding="10dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_black_24dp"
        android:id="@+id/back"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image"
        android:src="@drawable/police"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/names"
        android:text="Name"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emails"
        android:textColor="@color/colorPrimary"
        android:text="Email"
        android:textAlignment="center"
        android:layout_below="@+id/names"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/random"
        android:layout_below="@id/emails"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balance"
        android:text="Balance"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_below="@+id/emails"
        android:textSize="30dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/random"
        android:id="@+id/tp"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pay full"
            android:id="@+id/full"
            android:textAllCaps="false"
            android:background="@drawable/button2"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:text="Pay partial"
            android:textAllCaps="false"
            android:id="@+id/partial"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/tp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partial amt to pay:"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payable_amt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll2"
        android:layout_below="@+id/ll">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="3"
            android:scrollbars="vertical"
            android:id="@+id/desc"
            android:hint="Enter description..."
            android:scrollbarAlwaysDrawVerticalTrack="true"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/done"
            android:text="Done"
            android:layout_marginTop="20dp"
            android:background="@drawable/button2"
            android:textAllCaps="false"/>
    </LinearLayout>

    <Button
        android:layout_below="@id/ll2"
        android:id="@+id/btn_gateway_demo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Click me to proceed Gateway"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button2"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_below="@+id/btn_gateway_demo"
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

</RelativeLayout>